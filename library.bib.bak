number = {5},
pages = {3894},
title = {{Measurements of the dc electric dipole polarizabilities of the alkali dimer molecules, homonuclear and heteronuclear}},
url = {http://link.aip.org/link/JCPSA6/v98/i5/p3894/s1\&Agg=doi},
volume = {98},
year = {1993}
}
